                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </TableRow>
        <TableRow
        android:id="@+id/tableRow3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <Button
            android:text=""
            android:id="@+id/ninth_cell"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <Button
            android:text=""
            android:id="@+id/tenth_cell"
